	<url value="http://hl7.org.uk/CareConnect-ConditionClinicalStatus-1.valueset.xml"/>
	<name value="CareConnect-ConditionClinicalStatus-1"/>
	<status value="draft"/>
	<publisher value="HL7 UK"/>
	<description value="Condition Clinical Status codes."/>
	<codeSystem>
		<system value="http://hl7.org.uk/fhir/ValueSet/CareConnect-ConditionClinicalStatus"/>
		<concept>
			<code value="active"/>
			<display value="Active"/>
			<definition value="The subject is currently experiencing the symptoms of the condition."/>
		</concept>
		<concept>
			<code value="inactive"/>
			<display value="Inactive"/>
			<definition value="The subject is either in remission or resolved."/>
		</concept>
		<concept>
			<code value="relapse"/>
			<display value="Relapse"/>
			<definition value="The subject is re-experiencing the symptoms of the condition after a period of remission or presumed resolution."/>
		</concept>
		<concept>
			<code value="remission"/>
			<display value="Remission"/>
			<definition value="The subject is no longer experiencing the symptoms of the condition, but there is a risk of the symptoms returning."/>
		</concept>
		<concept>
			<code value="resolved"/>
			<display value="Resolved"/>
			<definition value="The subject is no longer experiencing the symptoms of the condition and there is no perceived risk of the symptoms returning"/>
		</concept>
	</codeSystem>
</ValueSet>
